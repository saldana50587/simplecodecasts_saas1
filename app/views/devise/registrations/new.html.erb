<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center"> 
  <!-- Ruby code for pro and basic account -->
  <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>Sign up for the pro account for $10/month and get access to the community and contact information!</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign up for free and get basic access to the community.</p>
    <% end %>
    <!--Ruby code ends here -->
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
    <h2>Sign up</h2>
   
   <!-- Ruby Code to call and show the _basic_form.html.erb file -->
   <% if params[:plan] == '2' %>
   <%= render "pro_form" %>
   <% else %>   
    <%= render "basic_form" %>
    <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>